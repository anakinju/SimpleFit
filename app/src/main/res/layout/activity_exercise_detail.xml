<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/surface_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Exercise Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/surface_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvExerciseName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exercise Name"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:lineSpacingMultiplier="1.2"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Target Muscles: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTargetMuscles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chest + Arms + Shoulders" />

                    </LinearLayout>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipDifficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medium"
                        android:layout_marginBottom="8dp"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        app:chipCornerRadius="20dp"
                        app:chipBackgroundColor="@color/difficulty_medium"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvMetValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MET: 5.0"
                        android:textSize="12sp"
                        android:textColor="@color/text_tertiary"
                        android:layout_marginTop="4dp" />

                    <!-- è®­ç»ƒè¦ç‚¹ -->
                    <LinearLayout
                        android:id="@+id/layoutTrainingTips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp"
                        android:background="@color/surface_light"
                        android:padding="12dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’¡ Training Tips"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_purple"
                            android:layout_marginBottom="8dp" />
                        
                        <TextView
                            android:id="@+id/tvTrainingTips"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Training tips will be displayed here"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:lineSpacingMultiplier="1.3" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutTargetGoal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Training Goal: "
                            android:textStyle="bold"
                            android:textColor="@color/design_default_color_primary" />

                        <TextView
                            android:id="@+id/tvTargetGoal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Target: 20 reps"
                            android:textColor="@color/design_default_color_primary" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- GIF Demo Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageViewDemo"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:scaleType="centerCrop"
                        android:background="@color/surface_light"
                        android:contentDescription="Exercise Demo"
                        android:adjustViewBounds="true"
                        android:padding="12dp" />

                    <TextView
                        android:id="@+id/tvGifPlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:text="Exercise Demo GIF\nLoading..."
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/design_default_color_outline"
                        android:background="@color/design_default_color_surface"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Input Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/surface_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:background="@color/surface_light"
                        android:padding="12dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“Š Record Workout Data"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <!-- è®¡æ•°å™¨æ¨¡å¼ -->
                    <LinearLayout
                        android:id="@+id/layoutCounter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:hint="ðŸ”¢ Repetitions"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxStrokeColor="@color/primary_purple"
                            app:hintTextColor="@color/primary_purple">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etReps"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Assist Weight Input (only for assisted exercises) -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutAssistWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:visibility="gone"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxStrokeColor="@color/accent_purple"
                            app:hintTextColor="@color/accent_purple">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etAssistWeight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Added Weight Input (only for weighted exercises) -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutAddedWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:hint="ðŸ’ª Added Weight (kg)"
                            android:visibility="gone"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxStrokeColor="@color/accent_purple"
                            app:hintTextColor="@color/accent_purple">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etAddedWeight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <!-- è®¡æ—¶å™¨æ¨¡å¼ -->
                    <LinearLayout
                        android:id="@+id/layoutTimer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/tvTimerDisplay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textSize="48sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/primary_purple"
                            android:layout_marginVertical="20dp"
                            android:background="@color/surface_light"
                            android:padding="16dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginBottom="20dp">

                            <Button
                                android:id="@+id/btnStartPause"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â–¶ï¸ Start"
                                android:layout_marginEnd="12dp"
                                android:textStyle="bold"
                                android:backgroundTint="@color/primary_purple"
                                style="@style/Widget.Material3.Button" />

                            <Button
                                android:id="@+id/btnReset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ”„ Reset"
                                android:layout_marginStart="12dp"
                                android:textColor="@color/primary_purple"
                                style="@style/Widget.Material3.Button.TextButton" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- æ‰‹åŠ¨è¾“å…¥æ—¶é—´ -->
                    <LinearLayout
                        android:id="@+id/layoutManualTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="12dp"
                        android:background="@color/surface_light"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â±ï¸ Manual Time Entry"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="12dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:hint="â° Duration (seconds)"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxStrokeColor="@color/primary_purple"
                            app:hintTextColor="@color/primary_purple">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etDuration"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’¡ Tip: Use timer above for real-time tracking"
                            android:textSize="12sp"
                            android:textColor="@color/text_tertiary"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnAddToWorkout"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="16dp"
                        android:text="Add to Today's Workout"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:background="@drawable/button_gradient"
                        android:elevation="4dp"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
